@model SearchResultsViewModel

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MultiSearch</title>
    <link rel="stylesheet" href="~/css/searchResults.css" />
</head>
<body>
    <header>
        @{
            if (Model.SearchEngine != null)
            {
                <p>@Model.SearchEngine</p>
            }
        }
        <form method="get">
            <input type="text" name="query" value="@Model.Query" />
            <button type="submit">Поиск</button>
        </form>
        @{
            if (Model.LocalSearch)
            {
                <a href="/">Поиск в поисковых системах</a>
            }
            else
            {
                <a href="/home/local">Поиск в базе данных</a>
            }
        }
    </header>
    <main>
        <ol>
            @{ 
                foreach (var result in Model.SearchResults.OrderBy(r => r.Position))
                {
                    <li>
                        <a href="@result.Link" target="_blank">@result.Title</a>
                    </li>
                }
            }
        </ol>
    </main>
</body>
</html>

